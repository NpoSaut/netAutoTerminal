<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="FirmwareBurner.DialogShell"
    Title="DialogShell"
    SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display"
    WindowStartupLocation="CenterOwner" Width="300" Height="400"
    FocusManager.FocusedElement="{Binding ElementName=ContentPresenter}">
    <Window.Resources>
        <ResourceDictionary x:Name="ResourceDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/SharedResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="{x:Static SystemColors.ControlBrushKey}" />
    </Window.Background>
    <ContentPresenter Name="ContentPresenter" Content="{Binding}" />
</Window>