<UserControl x:Class="FirmwareBurner.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:FirmwareBurner.Views"
             xmlns:viewModels="clr-namespace:FirmwareBurner.ViewModels"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:triggerActions="clr-namespace:FirmwareBurner.TriggerActions"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             mc:Ignorable="d" d:DataContext="{x:Static viewModels:SampleData.Project}">
    <Grid>
        <Grid.Resources>
            <Style x:Key="InputBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="Padding" Value="3" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Target="{Binding ElementName=SerialNumberEdit}"
               Content="Серийный номер блока" />
        <Label Grid.Column="1" Grid.Row="0" Target="{Binding ElementName=AssemblyDateEdit}"
               Content="Дата изготовления" />

        <TextBox Grid.Column="0" Grid.Row="1" Name="SerialNumberEdit" Style="{StaticResource InputBoxStyle}"
                 Text="{Binding Path=BlockDetails.SerialNumber.ValueText, UpdateSourceTrigger=PropertyChanged}"
                 ToolTip="{Binding Path=BlockDetails.SerialNumber.ValidationErrorsText}">
            <TextBox.RenderTransform>
                <TranslateTransform />
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" Name="AssemblyDateEdit" Style="{StaticResource InputBoxStyle}"
                 Text="{Binding Path=BlockDetails.AssemblyDate.ValueText, UpdateSourceTrigger=PropertyChanged}"
                 ToolTip="{Binding Path=BlockDetails.AssemblyDate.ValidationErrorsText}">
            <TextBox.RenderTransform>
                <TranslateTransform />
            </TextBox.RenderTransform>
        </TextBox>

        <views:FirmwareSetConstructorView Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                                          DataContext="{Binding Path=FirmwareSetConstructor}" />
    </Grid>
    <i:Interaction.Triggers>
        <ei:DataTrigger Binding="{Binding BlockDetails.SerialNumber.IsValid}" Value="False">
            <ei:ChangePropertyAction TargetName="SerialNumberEdit" PropertyName="Background" Value="Tomato" />
            <ei:ControlStoryboardAction>
                <ei:ControlStoryboardAction.Storyboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="SerialNumberEdit" Storyboard.TargetProperty="RenderTransform.X"
                                         From="-5" To="0" Duration="0:0:0.7">
                            <DoubleAnimation.EasingFunction>
                                <ElasticEase />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </ei:ControlStoryboardAction.Storyboard>
            </ei:ControlStoryboardAction>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding BlockDetails.SerialNumber.IsValid}" Value="True">
            <ei:ChangePropertyAction TargetName="SerialNumberEdit" PropertyName="Background" Value="White" />
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding BlockDetails.AssemblyDate.IsValid}" Value="False">
            <ei:ChangePropertyAction TargetName="AssemblyDateEdit" PropertyName="Background" Value="Tomato" />
            <ei:ControlStoryboardAction>
                <ei:ControlStoryboardAction.Storyboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="AssemblyDateEdit" Storyboard.TargetProperty="RenderTransform.X"
                                         From="-5" To="0" Duration="0:0:0.7">
                            <DoubleAnimation.EasingFunction>
                                <ElasticEase />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </ei:ControlStoryboardAction.Storyboard>
            </ei:ControlStoryboardAction>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding BlockDetails.AssemblyDate.IsValid}" Value="True">
            <ei:ChangePropertyAction TargetName="AssemblyDateEdit" PropertyName="Background" Value="White" />
        </ei:DataTrigger>
    </i:Interaction.Triggers>
</UserControl>