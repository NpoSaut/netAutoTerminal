<UserControl x:Class="FirmwareBurner.Views.FirmwareSelectors.IntegratedFirmwareSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:firmwareSources="clr-namespace:FirmwareBurner.ViewModels.FirmwareSources"
             xmlns:viewModels="clr-namespace:FirmwareBurner.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{x:Static viewModels:SampleData.IntegratedFirmwareSelector}">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type firmwareSources:FirmwarePackageViewModel}">
            <Border Name="ItemRoot" Background="LightGreen">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ProgressBar Name="DownloadProgressBar" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                 Grid.ColumnSpan="2" Opacity="0"
                                 Value="{Binding Path=Availability.DownloadingProgress, Mode=OneWay}" Maximum="1" />
                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="#30ffffff">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Center" Text="{Binding Version, Mode=OneWay}" FontWeight="DemiBold" />
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Text="Стабильная" Opacity="0.6"
                               FontSize="10" Margin="2" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="4">
                        <Run Text="Дата выпуска" />
                        <Run Text="{Binding Version.ReleaseDate, StringFormat='dd.MM.yyy', Mode=OneWay}" />
                    </TextBlock>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=Availability.IsAvailable}" Value="False">
                    <Setter TargetName="ItemRoot" Property="Opacity" Value="0.3" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Availability.IsDownloading}" Value="True">
                    <Setter TargetName="ItemRoot" Property="Opacity" Value="1" />
                    <Setter TargetName="DownloadProgressBar" Property="Opacity" Value="1" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ListBox Margin="2" ItemsSource="{Binding Packages}" SelectedIndex="1">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Name="ItemRoot" BorderBrush="Gray" BorderThickness="1"
                                        Margin="2" CornerRadius="0">
                                    <ContentPresenter Content="{TemplateBinding Content}" />
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1" Opacity="0.2" BlurRadius="2" />
                                    </Border.Effect>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemRoot" Property="BorderBrush" Value="DodgerBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemRoot" Property="BorderBrush" Value="Blue" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>