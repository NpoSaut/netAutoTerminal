    <ItemsControl ItemsSource="{Binding Components}" AlternationCount="2">
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="viewModels:FirmwareSetComponentViewModel">
                <Border Name="ItemRoot" Padding="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding ModuleName, Mode=OneWay}" />
                        <TextBlock Grid.Column="1">
                            <Hyperlink Command="{Binding SelectFirmwareCommand}">
                                <Run x:Name="VersionPresenter"
                                     Text="{Binding FirmwareSelector.SelectedVersion, Mode=OneWay}" />
                            </Hyperlink>
                        </TextBlock>
                        <i:Interaction.Triggers>
                            <i:EventTrigger SourceObject="{Binding FirmwareSelectionRequest}" EventName="Raised">
                                <triggerActions:ShowDialogTriggerAction
                                    ResourceDictionary="../Views/FirmwareSelectors/FirmwareSelectorsDataTemplates.xaml" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Grid></Border>
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding Path=FirmwareSelector.IsPackageSelected}" Value="False">
                        <Setter TargetName="VersionPresenter" Property="Text" Value="Не выбрана" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex)}"
                        Value="1">
                        <Setter TargetName="ItemRoot" Property="Background" Value="#0A002795" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>


</UserControl>