<UserControl x:Class="FirmwareBurner.Views.FirmwareSetConstructorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:FirmwareBurner.ViewModels"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:triggerActions="clr-namespace:FirmwareBurner.TriggerActions"
             xmlns:dialogs="clr-namespace:FirmwareBurner.ViewModels.Dialogs"
             xmlns:firmwareSelectors="clr-namespace:FirmwareBurner.Views.FirmwareSelectors"
             mc:Ignorable="d" d:DesignWidth="300"
             d:DataContext="{x:Static viewModels:SampleData.FirmwareSetConstructor}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="FirmwareSelectors/FirmwareSelectorsDataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ItemsControl ItemsSource="{Binding Components}" AlternationCount="2">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Vertical" MaxHeight="100" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="viewModels:FirmwareSetComponentViewModel">
                <DockPanel Name="ItemRoot" Margin="1,1,6,1">
                    <Border CornerRadius="10"
                            BorderBrush="{StaticResource ProjectArrowBrush}" BorderThickness="1"
                            DockPanel.Dock="Left" Padding="8,2" Margin="0,0,4,0">
                        <TextBlock Name="VersionTextBlock" HorizontalAlignment="Center"
                                   Text="{Binding Path=SelectedFirmware.Version.FullVersion, Mode=OneWay}"
                                   Foreground="{StaticResource ProjectArrowBrush}" />
                    </Border>
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink Command="{Binding SelectFirmwareCommand}">
                            <Run Text="{Binding ModuleName, Mode=OneWay}" />
                        </Hyperlink>
                    </TextBlock>
                    <i:Interaction.Triggers>
                        <i:EventTrigger SourceObject="{Binding FirmwareSelectionRequest}" EventName="Raised">
                            <triggerActions:ShowDialogTriggerAction>
                                <ResourceDictionary>
                                    <DataTemplate DataType="{x:Type dialogs:FirmwareSelectorDialogViewModel}">
                                        <firmwareSelectors:FirmwareSelectorDialogView />
                                    </DataTemplate>
                                </ResourceDictionary>
                            </triggerActions:ShowDialogTriggerAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </DockPanel>
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding SelectedFirmware}" Value="{x:Null}">
                        <Setter TargetName="VersionTextBlock" Property="Text" Value="N/A" />
                    </DataTrigger>
                    <!--<DataTrigger
                        Binding="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex)}"
                        Value="1">
                        <Setter TargetName="ItemRoot" Property="Background" Value="#0A002795" />
                    </DataTrigger>-->
                </DataTemplate.Triggers>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>


</UserControl>